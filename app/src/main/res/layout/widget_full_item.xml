<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:id="@+id/widget_item_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/widget_item_linear_textinfo"
        android:paddingEnd="8dp">
        <TextView
            android:id="@+id/widget_text_item_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Example Text"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/widget_text_item_full"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/widget_text_item_short"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:text="company name"
            android:textSize="11sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/widget_linear_price_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/widget_text_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="16sp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            />

        <TextView
            android:id="@+id/widget_text_item_difference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="difference"
            android:paddingEnd="8dp"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:background="@color/green"
            android:paddingStart="6dp"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/widget_item_chart"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/widget_linear_price_info"
        android:layout_toEndOf="@id/widget_item_linear_textinfo"
        android:background="@color/blue" />


</RelativeLayout>