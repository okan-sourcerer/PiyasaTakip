<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_widget_background">

    <LinearLayout
        android:id="@+id/widget_item_linear_textinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingStart="10dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/widget_text_item_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:text="@string/placeholder_example_text"
            android:textSize="19sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/widget_text_item_full"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingStart="8dp"
            android:paddingTop="6dp"
            android:text="@string/placeholder_company_name"
            android:textSize="13sp"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/widget_linear_price_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_text_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:text="@string/placeholder_price"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/widget_text_item_difference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="6dp"
            android:paddingEnd="8dp"
            android:text="@string/placeholder_difference"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/widget_item_chart"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/widget_linear_price_info"
        android:layout_toEndOf="@id/widget_item_linear_textinfo"
        android:contentDescription="@string/description_info_chart" />

    <TextView
        android:id="@+id/widget_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:visibility="invisible"
        android:textStyle="bold"
        android:paddingBottom="2dp"
        android:paddingTop="4dp"
        />

</RelativeLayout>