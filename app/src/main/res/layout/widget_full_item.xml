<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_widget_inner_view_background"
    android:theme="@android:style/Theme.DeviceDefault.DayNight">

    <LinearLayout
        android:id="@+id/widget_item_linear_textinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/widget_text_item_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:text="Example Text"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_text_item_full"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/widget_text_item_short"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingStart="8dp"
            android:paddingTop="6dp"
            android:text="company name"
            android:textSize="13sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/widget_linear_price_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/widget_text_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:text="Price"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_text_item_difference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="6dp"
            android:paddingEnd="8dp"
            android:text="difference"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/widget_item_chart"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/widget_linear_price_info"
        android:layout_toEndOf="@id/widget_item_linear_textinfo" />

    <TextView
        android:id="@+id/widget_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="24sp"
        android:visibility="invisible"
        android:textStyle="bold"
        android:padding="6dp"
        />

</RelativeLayout>